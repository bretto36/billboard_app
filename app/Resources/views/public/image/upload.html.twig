{% extends 'base2.html.twig' %}

{% block title %}Upload Your Image{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('css/slim.css') }}" rel="stylesheet">
    {{ parent() }}
{% endblock %}

{% block headjs %}
    {{ parent() }}
    <script>
        $(function() {
            $(selector).slim({
                "ratio": "4:3",
                "minSize": {
                    "width": 640,
                    "height": 480,
                },
                "service": "upload-async.php",
                "post": ["input", "output", "actions"],
                "download": false,
                "onSave": function(data, ready) { alert('saving!'); },
                "label": "Drop your image here.",
                "buttonConfirmLabel":"Ok"
            });
        });

        $('#my-snippet').slimParse();
    </script>
{% endblock %}

